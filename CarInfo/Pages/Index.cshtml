@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-5">
    <h3 class="text-center"><img src="~/icons/car-logo.png" width="64" /> Car Information </h3>

    <div class="card p-4 shadow-sm">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="carMake" class="form-label"><i class="fas fa-industry"></i> Select Car Make</label>
                    <select id="carMake" class="form-control select2 form-select-lg"></select>
                </div>
            </div>
            <div class="col-6">
                <label for="manufactureYear" class="form-label">
                    <i class="fas fa-calendar"></i> Enter Manufacture Year
                </label>
                <input type="text" id="manufactureYear" class="form-control" placeholder="Select Year">
            </div>
        </div>

        <div class="mt-3">
            <button class="btn btn-primary" onclick="getVehicleTypes()">
                <i class="fas fa-list"></i> Get Vehicle Types
            </button>
            <button class="btn btn-secondary" onclick="getCarModels()">
                <i class="fas fa-car-side"></i> Get Car Models
            </button>
        </div>
    </div>

    <div class="card mt-5 p-2 shadow-sm">
        <div class="row">
            <div class="col">
                <h6 class="text-center">Vehicle Types</h6>
                <table id="vehicleTypesTable" class="table table-bordered table-striped mx-auto" style="width:100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Vehicle Type</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-1 p-2 shadow-sm">
        <div class="row">
            <div class="col">
                <h6 class="text-center">Car Models</h6>
                <table id="carModelsTable" class="table table-bordered table-striped mx-auto" style="width:100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Car Model</th>
                            <th>Model ID</th>
                            <th>Model Name</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>